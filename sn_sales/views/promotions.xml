   <record id="sn_sales_promotions_tree" model="ir.ui.view">
       <field name="name">sn_sales promotions tree</field>
       <field name="model">sn_sales.promotions</field>
       <field name="arch" type="xml">
           <tree string="" decoration-bf="True">
               <field name="name"/>
           </tree>
       </field>
   </record>


    <!--Form-->
    <record id="sn_sales_promotions_form" model="ir.ui.view">
        <field name="name">sn_sales promotions form</field>
        <field name="model">sn_sales.promotions</field>
        <field name="arch" type="xml">
            <form string="">
                <sheet>
                        <field name="name"/>
                </sheet>
            </form>
        </field>
    </record>

    <!--Action-->
    <record id="sn_sales_promotions_action" model="ir.actions.act_window">
        <field name="name">Promotions</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">sn_sales.promotions</field>
        <field name="view_mode">tree,form</field>
        <field name="help" type="html">
          <p class="oe_view_nocontent_create">
            <!-- Add Text Here -->
          </p><p>
            <!-- More details about what a user can do with this object will be OK -->
