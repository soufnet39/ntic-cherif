    <!-- product-->
    <record model="ir.rule" id="sale_product_rule">
        <field name="name">Product multi company</field>
        <field name="model_id" ref="model_sn_sales_product"/>
        <field name="global" eval="True"/>
        <field name="groups" eval="[(4, ref('sn_sales.sn_sales_user')), (4, ref('sn_sales.sn_sales_manager'))]"/>
        <field name="domain_force">['|', ('company_id','=',False), ('company_id', 'in', company_ids)]</field>
    </record>

    <!-- partner -->
    <record model="ir.rule" id="sale_partner_rule">
        <field name="name">Partner multi-company</field>
