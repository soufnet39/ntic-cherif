<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="res_uom_settings_view_form" model="ir.ui.view">
            <field name="name">res.config.settings.view.form.inherit.uom</field>
            <field name="model">res.config.settings</field>
            <field name="inherit_id" ref="base.res_config_settings_view_form"/>
            <field name="arch" type="xml">
                <xpath expr="//div[hasclass('settings')]" position="inside">
                    <div class="app_settings_block" data-string="Variant" string="Variant" data-key="sn_variant" groups="sn_variants.sn_variants_manager">
                        <div class="h1 config-big-tilte"> Configuration - Variants </div>
                        <h2>Recording</h2>
                        <div class="row o_settings_container">
                            <div class="col-md-6 o_setting_box">

                                <div class="o_setting_left_pane">
                                    <field name="vaiants_exists"/>
                                </div>
                                <div class="o_setting_right_pane">
                                    <label for="vaiants_exists"/>
                                    <div class="text-muted">
                                        Proposer des différentes variants pour le même produit
                                    </div>
                                </div>
                                <br/>
                            </div>
                            <div class="col-md-6 o_setting_box">
                                
                            </div>
                        </div>

                    </div>
                </xpath>
            </field>
        </record>

     
    </data>
</odoo>
