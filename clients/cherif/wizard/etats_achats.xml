<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <!-- Form view for wizard -->
    <record model="ir.ui.view" id="cherif_achats_wizard_form">
        <field name="name">Etat de achat</field>
        <field name="model">cherif.achats.wiz1</field>
        <field name="type">form</field>

        <field name="arch" type="xml">
            <form string="Etats d'achats" create="false" delete="false" edit="true">
               
                <sheet>
                <div class="h1 text-center text-danger py-3 mb-3">
                  Etat d'achats
                </div>
                    <div class="row">
                        <div class="col-md-7" id="block1">
                           
                           
                            <div class="row">
                                <div class="col-md-2">
                                    <label for="periode"/>
                                </div>
                                <div class="col-md-10">
                                    <field name="periode" />
                                </div>
                            </div>
                            <div  class="row" attrs="{'invisible': [('periode','!=','interval')]}">
                                <div class="col-md-2">
                                    <span class="o_form_label"> Interval </span>
                                </div>
                                <div class="col-md-2 text-right">
                                   <label for="date_debut"/>  
                                </div>                               
                                <div class="col-md-3">
                                    <field attrs="{ 'required': [('periode','=','interval')] }" name="date_debut" />
                                </div>
                                <div class="col-md-2 text-right">
                                   <label for="date_fin"/>   
                                </div>                             
                                <div class="col-md-3">
                                    <field attrs="{ 'required': [('periode','=','interval')] }" name="date_fin" />
                                </div>
                            </div>
                            <div attrs="{'invisible': [('periode','!=','mois')]}" class="row">
                                <div class="col-md-2">
                                    <label for="mois"/>
                                </div>
                                <div class="col-md-10">
                                    <field attrs="{ 'required': [('periode','=','mois')] }" name="mois" />
                                </div>
                            </div>
                    
                     
                            <div attrs="{'invisible': ['|',('periode','=','global'),('periode','=','interval')]}" class="row">
                                <div class="col-md-2">
                                    <label for="annee"/>
                                </div>
                                <div class="col-md-10">
                                    <field name="annee" />
                                </div>
                            </div>
                            
                        </div>
                        <div class="col-md-5" style="padding:20px 50px">
                            
                            <button class="btn btn-primary btn-block" name="get_achats_lines" type="object">Filtration</button>
                            <button class="btn btn-primary btn-block" name="print_etats_achats_lines" type="object">Impression</button>
                          <br/>
                            <div class="row">
                                    <div class="col-md-6 text-right">
                                        <span class="o_form_label">Date de document: </span>
                                    </div>
                                    <div class="col-md-6">
                                        <field name="date_operation" />
                                    </div>
                                </div>
                            </div>
                    </div>
                    <notebook>
                        <page string="achats">
                            <field name="lines_ids" mode="tree">
                                <tree string="Lines" decoration-bf="True">
                                    <field name="name" string="Article" />
                                    <!-- <field name="confirmation_date" string="Date" />                                     -->
                                    <field name="price_unit" string="Prix.U"  />
                                    <field name="qty" string="Qte."  />
                                    <field name="montant"  sum="Montant" />
                                </tree>
                            </field>
                        </page>
                        <page string="Options Impression">
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Etat des achats action -->
    <record model="ir.actions.act_window" id="cherif_etat_achats">
        <field name="name">Etat d'achats</field>
        <field name="res_model">cherif.achats.wiz1</field>
        <field name="view_mode">form</field>
        <field name="view_id" ref="cherif_achats_wizard_form"/>
        <field name="target">current</field>
    </record>

    <!-- menu Etats de achats--> 
    <!-- Must have the same id to overwrite the same menu in sn_sales -->
    <menuitem id="menu_achats_wiz"
        action="cherif_etat_achats"
        name="Etat d'chats"
        parent="sn_base.menu_halat"
        groups="cherif_boss"
        sequence="1"/>
</odoo>
